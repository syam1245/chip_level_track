# ─── Cryptographic Secrets ────────────────────────────────────────────────────
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
AUTH_TOKEN_SECRET=<replace_with_64_byte_random_hex>
JWT_SECRET=<replace_with_64_byte_random_hex>

# ─── Database ────────────────────────────────────────────────────────────────
# Local development:
MONGODB_URI=mongodb://127.0.0.1:27017/chip_level_track
# Production (MongoDB Atlas):
# MONGODB_URI=mongodb+srv://<user>:<password>@<cluster>.mongodb.net/?retryWrites=true&w=majority

# ─── Server ──────────────────────────────────────────────────────────────────
PORT=5000
NODE_ENV=development
# In production set to the exact origin of your frontend, e.g.:
# CORS_ORIGIN=https://yourdomain.com
CORS_ORIGIN=http://localhost:3000

# ─── Technician Passwords (min 8 chars) ──────────────────────────────────────
# These seed the DB on first run. Change them BEFORE seeding in production.
TECH_PASSWORD_SHYAM=<min_8_char_password>
TECH_PASSWORD_RAKESH=<min_8_char_password>
TECH_PASSWORD_AKHIL=<min_8_char_password>
TECH_PASSWORD_NABEEL=<min_8_char_password>

# ─── External APIs ───────────────────────────────────────────────────────────
GEMINI_API_KEY=<your_google_gemini_api_key>
# Optional: override the Gemini model (default: gemini-2.5-flash)
# GEMINI_MODEL=gemini-2.5-flash
